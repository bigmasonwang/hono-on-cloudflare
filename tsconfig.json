{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ESNext"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@cloudflare",
      "./test"
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "worker-configuration.d.ts",
    "vitest.config.ts"
  ]
}
